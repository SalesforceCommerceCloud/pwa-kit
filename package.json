{
  "name": "pwa-kit",
  "version": "2.8.0-dev",
  "engines": {
    "node": "^16.0.0 || ^18.0.0",
    "npm": "^7.0.0 || ^8.0.0 || ^9.0.0"
  },
  "devDependencies": {
    "commander": "^2.20.3",
    "lerna": "^6.6.1",
    "semver": "^7.3.8",
    "shelljs": "^0.8.5"
  },
  "scripts": {
    "preinstall": "node ./scripts/check-version.js",
    "postinstall": "node ./scripts/bootstrap.js",
    "lerna": "lerna",
    "pretest": "npm run lint",
