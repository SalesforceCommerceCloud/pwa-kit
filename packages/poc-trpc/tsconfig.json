{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2020",
        "lib": ["ES2020"],

        /* Modules */
        "module": "CommonJS",
        "moduleResolution": "Node",

        /* Emit */
        "sourceMap": true,
        "outDir": "dist",
        "inlineSources": true,

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        /* Completeness */
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
